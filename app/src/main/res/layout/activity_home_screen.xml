<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".StartQuiz">
    <TextView
        android:id="@+id/tQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:textSize="45sp"
        android:layout_marginTop="65dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kuis"
            android:gravity="center"
            android:textSize="40sp"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/help100"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/playGame"
            fbutton:buttonColor="@color/lightGreen"
            android:layout_width="300dp"
            android:text="Mulai Kuis"
            android:backgroundTint="@color/colorMint"
            android:shadowColor="@color/colorMintDark"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/coinImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/thropy" />

        <TextView
            android:id="@+id/best_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textSize="35sp"
            android:layout_toRightOf="@id/coinImage"/>

    </RelativeLayout>
</LinearLayout>
</ScrollView>